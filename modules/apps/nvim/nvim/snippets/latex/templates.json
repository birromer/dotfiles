      "\t\t\t\\If(\\tcp*[h]{O(\\Left,\\This)==1}){\\Left compatible with \\This}{",
      "\t\t\t\t\\lIf{\\Left $<$ \\This}{\\Union{\\Left,\\This}}",
      "\t\t\t\t\\lElse{\\Union{\\This,\\Left}}",
      "\t\t\t}",
      "\t\t}",
      "\t\t\\lForEach{element $e$ of the line $i$}{",
      "\t\t\t\\FindCompress{p}",
      "\t\t}",
